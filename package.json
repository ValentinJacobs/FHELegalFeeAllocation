{
  "name": "confidential-legal-fee-allocation",
  "version": "1.0.0",
  "description": "Confidential Legal Fee Allocation System using Zama fhEVM for private fee distribution and case management",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:unit": "hardhat test test/ConfidentialLegalFeeAllocation.test.js",
    "test:integration": "hardhat test test/IntegrationWorkflow.test.js",
    "test:security": "hardhat test test/EdgeCasesAndSecurity.test.js",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "verify": "hardhat run scripts/verify.js --network sepolia",
    "interact": "hardhat run scripts/interact.js --network sepolia",
    "simulate": "hardhat run scripts/simulate.js --network sepolia",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write \"**/*.{js,json,md,sol}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,sol}\"",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "security": "npm run audit && npm run lint:sol",
    "prepare": "husky install",
    "ci": "npm run lint && npm run lint:sol && npm run format:check && npm run compile && npm run test && npm run test:coverage"
  },
  "keywords": [
    "legal",
    "fee-allocation",
    "confidential-computing",
    "fhevm",
    "zama",
    "privacy",
    "blockchain",
    "hardhat",
    "ethereum",
    "sepolia"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "chai": "^4.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^9.0.0",
    "prettier": "^3.2.0",
    "prettier-plugin-solidity": "^1.3.0",
    "solhint": "^5.0.3",
    "solidity-coverage": "^0.8.0",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.5.0",
    "dotenv": "^16.4.0"
  }
}
